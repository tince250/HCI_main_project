<Page x:Class="HCI_main_project.View.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_main_project.View" xmlns:components="clr-namespace:HCI_main_project.Components" xmlns:viewModels="clr-namespace:HCI_main_project.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="1000"
      Title="LoginPage"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Grid.Column="0" Margin="0, 60">
            <Image.Source>
                <BitmapImage UriSource="..\Resources\register.jpg" />
            </Image.Source>
        </Image>



        <Grid Grid.Column="1" VerticalAlignment="Center" Margin="50, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="65"/>
                <RowDefinition Height="65"/>
                <RowDefinition Height="55"/>
                <RowDefinition Height="65"/>
                <RowDefinition MinHeight="20" MaxHeight="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Style="{StaticResource Title}" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    Welcome
            </TextBlock>
            <Separator Grid.Row="0" VerticalAlignment="Bottom" Margin="50,0" Background="{StaticResource OrangeColor}" BorderBrush="{StaticResource OrangeColor}"/>

            <Label Grid.Row="1" Content="Email:" VerticalContentAlignment="Bottom" FontSize="20"/>
            <TextBox
                    Grid.Row="2"
                    VerticalAlignment="Top"
                    MaxLength="20"
                FontSize="22"
                KeyDown="OnKeyDownHandler"
                    Style="{StaticResource CustomMaterialDesignFloatingHintTextBox}"
                    Text="{Binding UpdateSourceTrigger=PropertyChanged, Path=Email, ValidatesOnDataErrors=true, NotifyOnValidationError=true}"
                LostFocus="TextBox_LostFocus">
            </TextBox>


            <Label Grid.Row="3" Content="Password:" VerticalContentAlignment="Bottom" FontSize="22"/>
            <components:BindablePasswordBox Grid.Row="4" KeyDown="OnKeyDownHandler"
                    Password="{Binding Path=Password, Mode=TwoWay, ValidatesOnDataErrors=true, NotifyOnValidationError=true}"
                                            LostFocus="PasswordBox_Changed"/>

            <Button
                Command="{Binding Path=LoginClickCommand}"
                Grid.Row="6"
                Height="60"
                MinWidth="170"
                FontSize="24"
                MaxWidth="250"
                FontWeight="Bold"
                materialDesign:ButtonAssist.CornerRadius="25"                
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                ToolTip="MaterialDesignRaisedDarkButton with Round Corners"
                Background="{StaticResource ButtonLightBlueColor}"
                Foreground="{StaticResource WhiteColor}" VerticalAlignment="Top">

                <TextBlock Text="Login" />

            </Button>

            <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label FontWeight="Bold" Content="Don't have an account? " VerticalContentAlignment="Center" FontSize="17"></Label>
         
                <Label FontWeight="Bold" VerticalContentAlignment="Center" FontSize="17" Foreground="{StaticResource OrangeColor}">
                    <Hyperlink NavigateUri="RegisterPage.xaml" FontWeight="Bold" FontSize="17" Foreground="{StaticResource OrangeColor}">
                        Register
                    </Hyperlink>
                </Label>

            </StackPanel>


        </Grid>

        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="{StaticResource OrangeColor}" Margin="20, 10" CornerRadius="25" Opacity="0" Width="400">
            <Border.Style>
                <Style TargetType="{x:Type Border}">
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=ErrorHappend}" Value="true"/>
                            </MultiDataTrigger.Conditions>
                            <MultiDataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation 
                                            Storyboard.TargetProperty="Opacity"
                                            Duration="0:0:4" From="1" To="0"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiDataTrigger.EnterActions>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock FontSize="18" Foreground="White" TextAlignment="Center" VerticalAlignment="Center">
                <Run Text="{Binding Path=ErrorMessage}"/>
            </TextBlock>
        </Border>

        <Button 
            Grid.Row="1"
            Grid.Column="1"
                    Height="60"
                    materialDesign:ButtonAssist.CornerRadius="40"               
                       Width="65"
                        Margin="10, 0, 20, 0"
                          HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                          Style="{StaticResource MaterialDesignRaisedLightButton}"
                            Background="{StaticResource ButtonLightBlueColor}"
                            BorderBrush="Transparent"
                          ToolTip="Open help window"
                           >
            <materialDesign:PackIcon Margin="0,0,0,0"
                            Width="40"
                            Height="30"
                            HorizontalAlignment="Center"          
                            Foreground="{StaticResource WhiteColor}"
                            Kind="QuestionMarkCircle" />
        </Button>

    </Grid>
</Page>
